{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "commonjs",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "pretty": true,
        "strict": true,
        "target": "es5",
        "inlineSourceMap": true,
        "stripInternal": true
    },
    "exclude": [
        "node_modules"
    ]
}

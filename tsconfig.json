{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "commonjs",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "pretty": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "exclude": [
        "node_modules"
    ]
}

{
  "name": "patternplate-transform-typescript",
  "version": "0.7.0",
  "description": "TypeScript transform for patternplate",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsc --project .",
    "linter": "tslint --project ./tsconfig.json --type-check",
    "clean": "rimraf dist",
    "pretest": "npm run clean && npm start",
    "test": "nyc ava",
    "coverage": "nyc report --reporter=lcov && cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "prerelease": "npm start",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin master && npm publish"
  },
  "author": {
    "name": "Markus Wolf",
    "email": "knister.peter@shadowrun-clan.de"
  },
  "repository": {
    "type": "git",
    "url": "KnisterPeter/patternplate-transform-typescript"
  },
  "license": "MIT",
  "devDependencies": {
    "@knisterpeter/standard-tslint": "^1.4.0",
    "@types/common-tags": "^1.2.5",
    "@types/md5": "^2.1.32",
    "@types/node": "^7.0.12",
    "ava": "^0.19.0",
    "common-tags": "^1.4.0",
    "coveralls": "^2.13.0",
    "cz-conventional-changelog": "2.0.0",
    "nyc": "^10.2.0",
    "rimraf": "^2.6.1",
    "source-map-support": "^0.4.14",
    "standard-version": "^4.0.0",
    "tslint": "^5.0.0",
    "typescript": "^2.3.2"
  },
  "peerDependencies": {
    "typescript": ">=2.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "files": [
      "dist/**/*.test.js"
    ],
    "source": [
      "dist/**/*.js"
    ],
    "require": [
      "source-map-support/register"
    ]
  },
  "nyc": {
    "all": true,
    "cache": true,
    "exclude": [
      "node_modules",
      "coverage",
      "dist/**/*.test.js",
      "wallaby.conf.js"
    ]
  },
  "dependencies": {
    "md5": "^2.2.1"
  }
}
